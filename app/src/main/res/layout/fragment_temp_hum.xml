<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/custom_progress_background_white"
    android:overScrollMode="never"
    android:scrollbars="none"
    tools:context=".MainActivity">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="30dp">

        <LinearLayout
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_marginRight="10dp"
                android:text="@string/outter_temp"/>
            <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                android:id="@+id/progressOne"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                app:rcBackgroundColor="@color/custom_progress_background"
                app:rcBackgroundPadding="2dp"
                app:rcBackgroundRadius="40dp"
                app:rcMax="40"
                app:rcProgress="0"
                app:rcProgressColor="@color/custom_progress_blue_progress" />
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/outterDegree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="0℃"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_marginRight="10dp"
                android:text="@string/outter_hum"/>
            <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                android:id="@+id/progressTwo"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                app:rcBackgroundColor="@color/custom_progress_background"
                app:rcBackgroundPadding="2dp"
                app:rcBackgroundRadius="40dp"
                app:rcMax="100"
                app:rcProgress="0"
                app:rcProgressColor="@color/custom_progress_green_progress" />
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/outterHum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="0%"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_marginRight="10dp"
                android:text="@string/inner_temp"/>
            <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                android:id="@+id/progressThree"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                app:rcBackgroundColor="@color/custom_progress_background"
                app:rcBackgroundPadding="2dp"
                app:rcBackgroundRadius="40dp"
                app:rcMax="50"
                app:rcProgress="0"
                app:rcProgressColor="@color/custom_progress_orange_progress" />
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/innerDegree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="0℃"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_marginRight="10dp"
                android:text="@string/inner_hum"/>
            <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                android:id="@+id/progressFour"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                app:rcBackgroundColor="@color/custom_progress_background"
                app:rcBackgroundPadding="2dp"
                app:rcBackgroundRadius="40dp"
                app:rcMax="100"
                app:rcProgress="0"
                app:rcProgressColor="@color/custom_progress_red_progress" />
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/innerHum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="0%"/>
        </LinearLayout>

        <Button
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="推荐信息"
            android:textColor="#9600ff"
            android:id="@+id/advice"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
</RelativeLayout>